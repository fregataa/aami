# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=changeme
DB_NAME=config_server
DB_SSLMODE=disable

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Service Discovery
SD_OUTPUT_PATH=/etc/prometheus/sd
SD_REFRESH_INTERVAL=30s

# Bootstrap
BOOTSTRAP_TOKEN_DEFAULT_EXPIRY=24h
BOOTSTRAP_TOKEN_DEFAULT_MAX_USES=1

# CORS (if needed)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Application
APP_ENV=development
APP_DEBUG=false
